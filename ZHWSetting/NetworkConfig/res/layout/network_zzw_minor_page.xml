            		android:layout_height="wrap_content"
            		android:layout_marginLeft="15dip"
            		android:inputType="numberSigned"
            		android:singleLine="true"
            		android:text="0"
            		android:textSize="16dip" />
        		
        		<TextView 
            		android:id="@+id/units_power"
