    			android:layout_marginRight="10dp"
    			android:gravity="right"> 
    		<Button
    		    android:id="@+id/freqSet"
    		    android:layout_width="80dp"
    		    android:layout_height="40dp"
    		    android:layout_gravity='right'
    		    android:text="频率设置" 
    		    android:textSize="14sp" />
    		</LinearLayout>
    		
