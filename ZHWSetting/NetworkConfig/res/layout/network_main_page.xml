<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="10dp">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网络配置"
        android:textSize="20dp" />
    
	<ScrollView 
	    android:id="@+id/scrollView1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

		<LinearLayout 
		    android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        
		    <com.example.views.NetworkItemView
        		android:id="@+id/lte_controller"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" />

    		<com.example.views.NetworkItemView
        		android:id="@+id/wifi_controller"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" />

    		<com.example.views.NetworkItemView
        		android:id="@+id/zzw_controller"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" />

    		<com.example.views.NetworkItemView
        		android:id="@+id/tt_controller"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" />

    		<com.example.views.NetworkItemView
        		android:id="@+id/zhw_controller"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" />
    		
    		<com.example.views.NetworkItemView
        		android:id="@+id/jq_controller"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" />
    
    	</LinearLayout>
    </ScrollView>

</LinearLayout>